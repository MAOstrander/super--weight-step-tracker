extends ../templates/basic.jade

block body
  .container
    .row
      h1.col-sm-8.col-sm-offset-2 Super Weight Tracker!

    .row
      .input-form.col-sm-8.col-sm-offset-2
        h2 Login Here
        form(method='POST')
          .form-group
            label Username
            input(type='text', name='user', placeholder='Type Username Here' required)
          .form-group
            label Password
            input(type='password', name='pass' required)
          .form-group
            input(type='submit', value='Click here to log in or Sign up!').btn.btn-default

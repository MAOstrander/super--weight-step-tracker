extends ../templates/basic.jade

block body
  .container
    .row
      h1.col-sm-8.col-sm-offset-2 Super Weight Tracker!

    .row
      .input-form.col-sm-8.col-sm-offset-2
        form(method='POST')
          .form-group
            label Steps
            input(type='number', name='steps', placeholder='How many steps did you take?')
          .form-group
            label Weight
            input(type='number', name='weight', placeholder='How much do you weigh?')
          .form-group
            input(type='submit', value='Log that ish!').btn.btn-default
    .row
      .input-form.col-sm-8.col-sm-offset-2 This is where the display table of the user's weight and steps will go...
